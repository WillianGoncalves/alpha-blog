<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Cagegory name", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="col-sm-12 center">
  <%= link_to "Return to articles list", articles_path %>
</div>
