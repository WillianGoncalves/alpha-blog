<h1 class="center">Alpha Bloggers</h1>

<div class="center">
  <%= will_paginate %>
</div>

<div class="row">
  <% @users.each do |user| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= link_to gravatar_for(user), user_path(user) %>
        <div class="caption center">
          <h3><%= link_to user.username, user_path(user) %></h3>
          <p>
            <%= link_to user_path(user), class: "btn btn-primary" do %>
              <%= "Article".pluralize(user.articles.count) %> <span class="badge"><%= user.articles.count %></span>
            <% end %>

            <% if current_user.admin? %>
              <%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all his articles?" }, class: "btn btn-danger" %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
  <%= will_paginate %>
</div>
